generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Document {
  id          String   @id @default(uuid())
  name        String
  uploaded_at DateTime @default(now())
  chunks      Chunk[]
}

model Chunk {
  id          String   @id @default(uuid())
  document_id String
  chunk_text  String
  document    Document @relation(fields: [document_id], references: [id])
}
